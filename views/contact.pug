extends base.pug 

block scripts 
    script(src="/static/script.js")

block style 
    style 
        include ../static/style.css
        include ../static/styleContact.css

block content 
    div#contact-container 
        h1 Contact Form
        form(action="/contact",method= "post",Class= "myForm") 
            input(type="text" name="name" placeholder="Enter your name" Class="")
            input(type="phone" name="phone" placeholder="Enter your number" Class="")
            input(type="email" name="email" placeholder="Enter your email id" Class="")
            input(type="text" name="address" placeholder="Enter your address" Class="")
            input(type="submit" name="submit" )